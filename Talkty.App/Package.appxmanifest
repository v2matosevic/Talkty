<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:uap3="http://schemas.microsoft.com/appx/manifest/uap/windows10/3"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  xmlns:desktop="http://schemas.microsoft.com/appx/manifest/desktop/windows10"
  IgnorableNamespaces="uap uap3 rescap desktop">

  <Identity
    Name="Version2.Talkty"
    Publisher="CN=Version2"
    Version="1.0.0.0"
    ProcessorArchitecture="x64" />

  <Properties>
    <DisplayName>Talkty</DisplayName>
    <PublisherDisplayName>Version2</PublisherDisplayName>
    <Logo>Assets\StoreLogo.png</Logo>
    <Description>Local speech-to-text powered by Whisper. Fast, private, and works offline.</Description>
  </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.22621.0" />
  </Dependencies>

  <Resources>
    <Resource Language="en-us" />
  </Resources>

  <Applications>
    <Application
      Id="App"
      Executable="Talkty.App.exe"
      EntryPoint="Windows.FullTrustApplication">

      <uap:VisualElements
        DisplayName="Talkty"
        Description="Local speech-to-text powered by Whisper"
        BackgroundColor="transparent"
        Square150x150Logo="Assets\Square150x150Logo.png"
        Square44x44Logo="Assets\Square44x44Logo.png">

        <uap:DefaultTile
          Wide310x150Logo="Assets\Wide310x150Logo.png"
          Square310x310Logo="Assets\Square310x310Logo.png"
          Square71x71Logo="Assets\Square71x71Logo.png"
          ShortName="Talkty">
          <uap:ShowNameOnTiles>
            <uap:ShowOn Tile="square150x150Logo"/>
            <uap:ShowOn Tile="wide310x150Logo"/>
            <uap:ShowOn Tile="square310x310Logo"/>
          </uap:ShowNameOnTiles>
        </uap:DefaultTile>

        <uap:SplashScreen Image="Assets\SplashScreen.png" BackgroundColor="#121214"/>
      </uap:VisualElements>

      <!-- System tray icon support -->
      <desktop:Extension Category="windows.startupTask">
        <desktop:StartupTask TaskId="TalktyStartup" Enabled="false" DisplayName="Talkty" />
      </desktop:Extension>

    </Application>
  </Applications>

  <Capabilities>
    <!-- Microphone access for speech recognition -->
    <DeviceCapability Name="microphone" />

    <!-- Full trust for running native Whisper model -->
    <rescap:Capability Name="runFullTrust" />
  </Capabilities>

</Package>
