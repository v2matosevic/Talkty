<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Effects -->
    <DropShadowEffect x:Key="ShadowEffect" BlurRadius="16" ShadowDepth="4" Opacity="0.3" Color="#000000"/>
    <DropShadowEffect x:Key="ShadowSmall" BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="#000000"/>

    <!-- Zinc palette -->
    <Color x:Key="Zinc950">#09090B</Color>
    <Color x:Key="Zinc900">#18181B</Color>
    <Color x:Key="Zinc800">#27272A</Color>
    <Color x:Key="Zinc700">#3F3F46</Color>
    <Color x:Key="Zinc600">#52525B</Color>
    <Color x:Key="Zinc500">#71717A</Color>
    <Color x:Key="Zinc400">#A1A1AA</Color>
    <Color x:Key="Zinc300">#D4D4D8</Color>
    <Color x:Key="Zinc200">#E4E4E7</Color>
    <Color x:Key="Zinc100">#F4F4F5</Color>
    <Color x:Key="Zinc50">#FAFAFA</Color>

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Green">#10B981</Color>
    <Color x:Key="Yellow">#F59E0B</Color>
    <Color x:Key="Red">#EF4444</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="Zinc950Brush" Color="{StaticResource Zinc950}"/>
    <SolidColorBrush x:Key="Zinc900Brush" Color="{StaticResource Zinc900}"/>
    <SolidColorBrush x:Key="Zinc800Brush" Color="{StaticResource Zinc800}"/>
    <SolidColorBrush x:Key="Zinc700Brush" Color="{StaticResource Zinc700}"/>
    <SolidColorBrush x:Key="Zinc600Brush" Color="{StaticResource Zinc600}"/>
    <SolidColorBrush x:Key="Zinc500Brush" Color="{StaticResource Zinc500}"/>
    <SolidColorBrush x:Key="Zinc400Brush" Color="{StaticResource Zinc400}"/>
    <SolidColorBrush x:Key="Zinc300Brush" Color="{StaticResource Zinc300}"/>
    <SolidColorBrush x:Key="Zinc200Brush" Color="{StaticResource Zinc200}"/>
    <SolidColorBrush x:Key="Zinc100Brush" Color="{StaticResource Zinc100}"/>
    <SolidColorBrush x:Key="Zinc50Brush" Color="{StaticResource Zinc50}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource Green}"/>
    <SolidColorBrush x:Key="YellowBrush" Color="{StaticResource Yellow}"/>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}"/>

    <!-- Compatibility -->
    <SolidColorBrush x:Key="BaseBrush" Color="{StaticResource Zinc950}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Zinc900}"/>
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource Zinc800}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Zinc100}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="AccentMutedBrush" Color="{StaticResource Zinc400}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource Zinc50}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource Zinc400}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource Zinc600}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Green}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Yellow}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Red}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Zinc800}"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource Zinc700}"/>
    <SolidColorBrush x:Key="GlassDarkBrush" Color="#E6090909"/>
    <SolidColorBrush x:Key="GlassMediumBrush" Color="#CC18181B"/>
    <SolidColorBrush x:Key="GlassLightBrush" Color="#B327272A"/>
    <SolidColorBrush x:Key="GlassHighlightBrush" Color="#4027272A"/>
    <SolidColorBrush x:Key="BorderGlassBrush" Color="#18FFFFFF"/>
    <SolidColorBrush x:Key="BorderGlassHoverBrush" Color="#30FFFFFF"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#10FFFFFF"/>
    <SolidColorBrush x:Key="BgBrush" Color="{StaticResource Zinc950}"/>
    <SolidColorBrush x:Key="BgCardBrush" Color="{StaticResource Zinc900}"/>
    <SolidColorBrush x:Key="BgCardHoverBrush" Color="{StaticResource Zinc800}"/>
    <SolidColorBrush x:Key="Text1Brush" Color="{StaticResource Zinc50}"/>
    <SolidColorBrush x:Key="Text2Brush" Color="{StaticResource Zinc400}"/>
    <SolidColorBrush x:Key="Text3Brush" Color="{StaticResource Zinc600}"/>
    <SolidColorBrush x:Key="ElevatedBrush" Color="{StaticResource Zinc800}"/>
    <SolidColorBrush x:Key="BgBaseBrush" Color="{StaticResource Zinc950}"/>
    <SolidColorBrush x:Key="BgSurfaceBrush" Color="{StaticResource Zinc900}"/>
    <SolidColorBrush x:Key="BgSurfaceHoverBrush" Color="{StaticResource Zinc800}"/>

    <!-- Typography -->
    <FontFamily x:Key="Font">Segoe UI Variable, Segoe UI</FontFamily>
    <FontFamily x:Key="FontMono">Cascadia Code, Consolas</FontFamily>
    <FontFamily x:Key="FontFamily">Segoe UI Variable, Segoe UI</FontFamily>
    <FontFamily x:Key="FontFamilyMono">Cascadia Code, Consolas</FontFamily>

    <Style x:Key="Display" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc50Brush}"/>
    </Style>

    <Style x:Key="H1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc50Brush}"/>
    </Style>

    <Style x:Key="H2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc50Brush}"/>
    </Style>

    <Style x:Key="Body" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc300Brush}"/>
    </Style>

    <Style x:Key="Caption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc500Brush}"/>
    </Style>

    <Style x:Key="Label" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc600Brush}"/>
    </Style>

    <Style x:Key="Mono" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontMono}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc500Brush}"/>
    </Style>

    <Style x:Key="TitleText" TargetType="TextBlock" BasedOn="{StaticResource H1}"/>
    <Style x:Key="HeadlineText" TargetType="TextBlock" BasedOn="{StaticResource H2}"/>
    <Style x:Key="BodyText" TargetType="TextBlock" BasedOn="{StaticResource Body}"/>
    <Style x:Key="SubtitleText" TargetType="TextBlock" BasedOn="{StaticResource Caption}"/>
    <Style x:Key="LabelText" TargetType="TextBlock" BasedOn="{StaticResource Label}"/>
    <Style x:Key="DisplayText" TargetType="TextBlock" BasedOn="{StaticResource Display}"/>

    <!-- Primary Button - White/Light -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Zinc100Brush}"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc950Brush}"/>
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="24,14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource WhiteBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource Zinc200Brush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource Zinc800Brush}"/>
                            <Setter Property="Foreground" Value="{StaticResource Zinc600Brush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Secondary Button -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc300Brush}"/>
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            Padding="{TemplateBinding Padding}"
                            BorderThickness="1"
                            BorderBrush="{StaticResource Zinc800Brush}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource Zinc900Brush}"/>
                            <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource Zinc700Brush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Ghost Button -->
    <Style x:Key="GhostButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc500Brush}"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource Zinc900Brush}"/>
                            <Setter Property="Foreground" Value="{StaticResource Zinc300Brush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Small Button - Compact version for inline use -->
    <Style x:Key="SmallButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Zinc700Brush}"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc200Brush}"/>
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource Zinc600Brush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource Zinc500Brush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Icon Button -->
    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource Zinc900Brush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Checkbox - Toggle Switch Style -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource Zinc300Brush}"/>
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Toggle Switch Track -->
                        <Border x:Name="Track"
                                Width="40" Height="22"
                                CornerRadius="11"
                                Background="{StaticResource Zinc700Brush}">
                            <!-- Toggle Switch Thumb -->
                            <Border x:Name="Thumb"
                                    Width="16" Height="16"
                                    CornerRadius="8"
                                    Background="{StaticResource Zinc300Brush}"
                                    HorizontalAlignment="Left"
                                    Margin="3,0,0,0"/>
                        </Border>

                        <ContentPresenter Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Track" Property="Background" Value="{StaticResource Zinc600Brush}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Track" Property="Background" Value="{StaticResource GreenBrush}"/>
                            <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="Thumb" Property="Margin" Value="0,0,3,0"/>
                            <Setter TargetName="Thumb" Property="Background" Value="{StaticResource WhiteBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBox Toggle Button -->
    <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="32"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="Border" Grid.ColumnSpan="2"
                    CornerRadius="8"
                    Background="{StaticResource Zinc900Brush}"
                    BorderBrush="{StaticResource Zinc700Brush}"
                    BorderThickness="1"/>
            <Path x:Name="Arrow" Grid.Column="1"
                  Fill="{StaticResource Zinc400Brush}"
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  Data="M0,0 L4,4 L8,0 Z"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource Zinc600Brush}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- ComboBox TextBox -->
    <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
        <Border x:Name="PART_ContentHost" Focusable="False" Background="Transparent"/>
    </ControlTemplate>

    <!-- ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource Zinc900Brush}"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc200Brush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Zinc700Brush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton x:Name="ToggleButton"
                                      Template="{StaticResource ComboBoxToggleButton}"
                                      Focusable="False"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      ClickMode="Press"/>
                        <ContentPresenter x:Name="ContentSite"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                          Margin="14,10,32,10"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>
                        <Popup x:Name="Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Slide">
                            <Grid x:Name="DropDown"
                                  SnapsToDevicePixels="True"
                                  MinWidth="{TemplateBinding ActualWidth}"
                                  MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                <Border x:Name="DropDownBorder"
                                        Background="{StaticResource Zinc900Brush}"
                                        BorderBrush="{StaticResource Zinc700Brush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="0,4,0,0"
                                        Padding="4">
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBoxItem -->
    <Style TargetType="ComboBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc200Brush}"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource Zinc800Brush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource Zinc800Brush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListBox -->
    <Style TargetType="ListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <ContentPresenter/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Card -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Zinc900Brush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Zinc800Brush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- Interactive Card -->
    <Style x:Key="InteractiveCard" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource Zinc800Brush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="14,12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource Zinc900Brush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource Zinc700Brush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Semantic color aliases -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Zinc950}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource Zinc50}"/>
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource Zinc500}"/>

    <!-- Button style aliases -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>
    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButton}"/>

    <!-- Tooltip Style -->
    <Style TargetType="ToolTip">
        <Setter Property="Background" Value="{StaticResource Zinc800Brush}"/>
        <Setter Property="Foreground" Value="{StaticResource Zinc200Brush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Zinc700Brush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}"
                            Effect="{StaticResource ShadowSmall}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
