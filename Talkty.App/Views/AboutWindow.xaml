<Window x:Class="Talkty.App.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Talkty"
        Width="400" Height="340"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#121214">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E4E4E7"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Text, Segoe UI"/>
        </Style>
    </Window.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo/Icon area -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Image Source="/Resources/tray.ico" Width="64" Height="64" RenderOptions.BitmapScalingMode="HighQuality"/>
        </StackPanel>

        <!-- App name and version -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,16">
            <TextBlock Text="Talkty" FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="VersionText" Text="Version 1.0.0" FontSize="13" Foreground="#A1A1AA" HorizontalAlignment="Center" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Description -->
        <TextBlock Grid.Row="2" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" Foreground="#A1A1AA" Margin="0,0,0,20">
            Local speech-to-text powered by Whisper.
            <LineBreak/>Fast, private, and works completely offline.
        </TextBlock>

        <!-- Credits -->
        <StackPanel Grid.Row="3" VerticalAlignment="Top">
            <TextBlock Text="Credits" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <TextBlock FontSize="12" Foreground="#71717A" TextWrapping="Wrap">
                Built with Whisper.net, whisper.cpp, NAudio, and CommunityToolkit.Mvvm.
                <LineBreak/>
                Speech recognition powered by OpenAI Whisper models.
            </TextBlock>
        </StackPanel>

        <!-- Footer with company info -->
        <StackPanel Grid.Row="4" HorizontalAlignment="Center">
            <TextBlock FontSize="12" Foreground="#71717A" HorizontalAlignment="Center">
                <Run Text="(c) 2025 Version2 - MIT License"/>
            </TextBlock>
            <TextBlock HorizontalAlignment="Center" Margin="0,4,0,0">
                <Hyperlink x:Name="WebsiteLink" NavigateUri="https://github.com/v2matosevic/Talkty" RequestNavigate="Hyperlink_RequestNavigate">
                    <Hyperlink.Style>
                        <Style TargetType="Hyperlink">
                            <Setter Property="Foreground" Value="#6E56CF"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#8B7AD8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Hyperlink.Style>
                    <Run Text="View on GitHub" FontSize="12"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
