<Window x:Class="Talkty.App.Views.OnboardingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to Talkty"
        Width="500" Height="380"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="12"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" CornerRadius="12,12,0,0" Padding="24,20">
                <StackPanel>
                    <TextBlock Text="Welcome to Talkty"
                               FontSize="24" FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundBrush}"/>
                    <TextBlock Text="Local speech-to-text, powered by Whisper"
                               FontSize="14"
                               Foreground="{StaticResource MutedBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,20">
                <StackPanel>
                    <!-- Step 1 -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Border Width="24" Height="24" CornerRadius="12"
                                    Background="{StaticResource AccentBrush}">
                                <TextBlock Text="1" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontWeight="SemiBold" FontSize="12"/>
                            </Border>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                <TextBlock Text="Press "
                                           FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource ForegroundBrush}"/>
                                <Border Background="{StaticResource SurfaceBrush}" CornerRadius="4" Padding="6,2" Margin="0,0,4,0">
                                    <TextBlock x:Name="HotkeyDisplay" Text="Alt + Q"
                                               FontSize="13" FontWeight="SemiBold"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               FontFamily="Cascadia Code, Consolas"/>
                                </Border>
                                <TextBlock Text=" to start recording"
                                           FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource ForegroundBrush}"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="A floating overlay will appear showing recording status."
                                   FontSize="13" Foreground="{StaticResource MutedBrush}"
                                   TextWrapping="Wrap" Margin="34,0,0,0"/>
                    </StackPanel>

                    <!-- Step 2 -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Border Width="24" Height="24" CornerRadius="12"
                                    Background="{StaticResource AccentBrush}">
                                <TextBlock Text="2" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontWeight="SemiBold" FontSize="12"/>
                            </Border>
                            <TextBlock Text="Speak into your microphone"
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource ForegroundBrush}"
                                       VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="All processing happens locally on your device. No data is sent to the cloud."
                                   FontSize="13" Foreground="{StaticResource MutedBrush}"
                                   TextWrapping="Wrap" Margin="34,0,0,0"/>
                    </StackPanel>

                    <!-- Step 3 -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Border Width="24" Height="24" CornerRadius="12"
                                    Background="{StaticResource AccentBrush}">
                                <TextBlock Text="3" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontWeight="SemiBold" FontSize="12"/>
                            </Border>
                            <TextBlock Text="Press the hotkey again to stop"
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource ForegroundBrush}"
                                       VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="Your speech will be transcribed and copied to clipboard automatically."
                                   FontSize="13" Foreground="{StaticResource MutedBrush}"
                                   TextWrapping="Wrap" Margin="34,0,0,0"/>
                    </StackPanel>

                    <!-- Note about model -->
                    <Border Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="0,8,0,0">
                        <StackPanel>
                            <TextBlock Text="Model Required"
                                       FontSize="13" FontWeight="SemiBold"
                                       Foreground="{StaticResource ForegroundBrush}"/>
                            <TextBlock Text="Open Settings to download a Whisper model. The Low model (~75MB) is recommended for most users."
                                       FontSize="13" Foreground="{StaticResource MutedBrush}"
                                       TextWrapping="Wrap" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}"
                    CornerRadius="0,0,12,12" Padding="24,16">
                <Grid>
                    <Button Content="Open Settings"
                            Style="{StaticResource SecondaryButtonStyle}"
                            HorizontalAlignment="Left"
                            Click="OpenSettings_Click"/>
                    <Button Content="Get Started"
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Right"
                            Click="GetStarted_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
